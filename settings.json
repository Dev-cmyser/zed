{
  "calls": {
    "mute_on_join": true
  },
  "audio": {
    "experimental.auto_microphone_volume": true,
    "experimental.rodio_audio": true
  },
  "git_panel": {
    "sort_by_path": true
  },
  "agent_servers": {
    "codex": {
      "default_mode": "full-access"
    },
    "claude": {
      "default_mode": "acceptEdits"
    }
  },
  "context_servers": {
    "mcp-server-github": {
      "source": "extension",
      "settings": {
        "github_personal_access_token": ""
      }
    }
  },
  "show_edit_predictions": true,
  "edit_predictions": {
    "disabled_globs": ["*.env"],
    "mode": "subtle",
    "enabled_in_text_threads": false
  },
  "ssh_connections": [
    {
      "host": "87.120.36.150",
      "username": "root",
      "projects": [
        {
          "paths": ["/home"]
        }
      ],
      "nickname": "my vpn"
    }
  ],
  "buffer_font_features": {
    "calt": true
  },
  "ui_font_features": {
    "calt": true
  },
  "features": {
    "edit_prediction_provider": "supermaven"
  },
  "agent": {
    "default_profile": "write",
    "play_sound_when_agent_done": false,
    "always_allow_tool_actions": true,
    "preferred_completion_mode": "normal",
    "single_file_review": false,
    "enable_feedback": false,

    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "open": true,
          "create_directory": true,
          "batch_tool": true,
          "code_actions": true,
          "code_symbols": true,
          "contents": true,
          "copy_path": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "rename": true,
          "symbol_info": true,
          "terminal": true,
          "thinking": true,
          "web_search": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-sonnet-4-5"
    }
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    // "light": "Ayu Light",
    // "dark": "Ayu Mirage"
    "dark": "Ayu Dark"
  },
  "vim_mode": true,
  "helix_mode": false,
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "confirm_quit": true,
  "current_line_highlight": "gutter",
  "autosave": "on_window_change",
  "relative_line_numbers": "disabled",
  "preferred_line_length": 120,
  "minimap": { "display_in": "active_editor" },
  "git": {
    "git_gutter": "tracked_files",
    "inline_blame": {
      "show_commit_summary": true,
      "delay_ms": 1000
    },
    "blame": {
      "show_avatar": false
    }
  },
  "project_panel": {
    "hide_root": true,
    "sticky_scroll": true,
    "auto_reveal_entries": true,
    "indent_size": 20.0,
    "git_status": true,
    "folder_icons": true,
    "file_icons": true,
    "entry_spacing": "comfortable",
    "hide_gitignore": false,
    "auto_fold_dirs": false
  },
  "languages": {
    "JSON": {
      "show_edit_predictions": false,
      "tab_size": 2,
      "hard_tabs": false,
      "ensure_final_newline_on_save": true
    },
    "Go": {
      "code_actions_on_format": {
        "source.organizeImports": true,
        "sousce.fixAll": true
      },
      "language_servers": ["gopls", "golangci-lint"],
      "format_on_save": "on"
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": false,
        "source.fixAll": false
      },
      "format_on_save": "off",
      "prettier": {
        "allowed": false
      }
    },
    "YAML": {
      "prettier": {
        "allowed": false
      },
      "format_on_save": "off"
    },
    "Proto": {
      "prettier": {
        "allowed": true,
        "plugins": ["@prettier/plugin-proto"]
      },
      "format_on_save": "on"
    },
    "ViewTree ($mol)": {
      "enable_language_server": true,
      "tab_size": 2,
      "hard_tabs": true,
      "ensure_final_newline_on_save": true
    }
  },
  "format_on_save": "on",
  "terminal": {
    "max_scroll_history_lines": 100000,
    "toolbar": {
      "breadcrumbs": false
    },
    "keep_selection_on_copy": false
  },
  "toolbar": {
    "quick_actions": false,
    "breadcrumbs": false
  },
  "file_types": {
    "Shell Script": [".env.*", "*.env"],
    "Dockerfile": ["*Dockerfile.*"],
    "Make": ["Makefile"]
  },
  "lsp": {
    "protobuf-language-server": {
      "binary": {
        "path": "protols"
      }
    },
    "gopls": {
      "initialization_options": {
        "buildFlags": ["-tags=integration"]
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--output.json.path",
          "stdout",
          "--show-stats=false",
          "--issues-exit-code=1"
        ]
      }
    }
  }
}
